{
	"name": "Hupper",
	"short_name": "Hupper",
	"version": "2.5.3",
	"version_name": "2.5.3",
	"manifest_version": 2,
	"description": "Improve the user experience of HUP.hu",
	"background": {
		"scripts": [
			"lib/bundle.js"
		]
	},
	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": false,
		"open_in_tab": true
	},
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": [
				"*://hup.lh/*",
				"*://hup.hu/*"
			],
			"css": [
				"data/core/css/hupper.css",
				"data/core/css/indentstyles.css"
			],
			"js": [
				"data/bundle.js"
			]
		}
	],
	"permissions": [
		"contextMenus",
		"tabs",
		"storage",
		"webRequest",
		"webRequestBlocking",
		"*://platform.twitter.com/widgets.js",
		"*://www.youtube.com/embed/*",
		"*://hup.hu/",
		"*://hup.lh/"
	],
	"web_accessible_resources": [
		"images/icons/009-pen.png"
	]
}
